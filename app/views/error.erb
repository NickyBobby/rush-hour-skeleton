<div class = "col-md-6 col-md-offset-3 text-center ">
<h1>An Error Occured</h1>
</div>
<div class = "row">
  <div class = "col-md-6 col-md-offset-3 text-center">
    <h3>Params</h3>
    <table class="table">
      <tr>
        <th>Request Verb: </th>
        <td><%= request.request_method %></td>
      </tr>
      <tr>
        <th>Request Path: </th>
        <td><%= request.path %></td>
      </tr>
      <tr>
        <th colspan=2>Parameters</th>
      </tr>
      <% request.params.each do |key, value| %>
      <tr>
        <td><%= key %></td>
        <td><%= value %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
